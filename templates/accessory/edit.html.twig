{% extends 'index.html.twig' %}

{% block title %}Modifier un Accessoire{% endblock %}

{% block main %}
<section class="max-w-8xl m-auto px-3 py-12 bg-gray-900 h-screen text-gray-100">
    <div class="mb-10 text-center">
        <h1 class="text-4xl font-bold text-gray-200">Modifier l'accessoire</h1>
        <p class="text-lg text-gray-400 mt-3">Apportez des modifications aux informations de l'accessoire ci-dessous.</p>
    </div>

    <div class="max-w-4xl mx-auto bg-gray-800 p-6 rounded-lg shadow-md">
        {{ form_start(form, { 'attr': {'class': 'space-y-6'} }) }}

        <div>
            <label for="accessory_name" class="block text-sm font-medium text-gray-200">Nom de l'Accessoire</label>
            {{ form_widget(form.name, { 'attr': {'class': 'mt-1 block w-full bg-gray-700 border border-gray-600 rounded-md text-gray-200 focus:ring-blue-500 focus:border-blue-500'} }) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="flex justify-between items-center mt-6">
            <a href="{{ path('app_accessory_index') }}" class="px-4 py-2 bg-red-500 text-white rounded-md shadow-md hover:bg-red-600 mr-4">
                Annuler
            </a>
            <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md shadow-md hover:bg-blue-700">
                Valider
            </button>
        </div>

        {{ form_end(form) }}
    </div>
</section>
{% endblock %}
