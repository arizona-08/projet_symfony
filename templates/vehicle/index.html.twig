{% extends 'index.html.twig' %}

{% block title %}Véhicules{% endblock %}

{% block main %}
<section class="py-12">
    <div class="max-w-8xl mx-auto sm:px-6 lg:px-8">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800">Liste des véhicules</h2>
            <a href="{{ path('vehicle_create') }}" class="px-2 py-1 border-2 border-red-600 rounded font-medium">
                Ajouter un véhicule
            </a>
        </div>
        <form action="{{ path('vehicle_index') }}" method="GET" class="flex flex-wrap gap-4 items-center mb-6">
            <div>
                <label for="brand" class="mr-2 text-gray-700">Marque :</label>
                <select name="brand" id="brand" class="px-2 py-1 border rounded-md">
                    <option value="">Toutes</option>
                </select>
            </div>
            <div>
                <label for="sort_km" class="mr-2 text-gray-700">Trier par KM :</label>
                <select name="sort_km" id="sort_km" class="px-2 py-1 border rounded-md">
                    <option value="">Aucun</option>
                    <option value="asc" {{ app.request.query.get('sort_km') == 'asc' ? 'selected' : '' }}>Croissant</option>
                    <option value="desc" {{ app.request.query.get('sort_km') == 'desc' ? 'selected' : '' }}>Décroissant</option>
                </select>
            </div>
            <button type="submit" class="bg-blue-500 px-3 py-2 rounded-md hover:bg-blue-600 text-white">
                Filtrer
            </button>
        </form>
        <div class="mt-6 bg-white overflow-hidden shadow-sm sm:rounded-lg">
            <table class="w-full border-collapse">
                <thead class="bg-gray-200">
                    <tr>
                        <th class="px-4 py-2 border text-center">Marque</th>
                        <th class="px-4 py-2 border text-center">Modèle</th>
                        <th class="px-4 py-2 border text-center">Dernière maintenance</th>
                        <th class="px-4 py-2 border text-center">Nombre de kilomètres</th>
                        <th class="px-4 py-2 border text-center">Numéro de série</th>
                        <th class="px-4 py-2 border text-center">Agence</th>
                        <th class="px-4 py-2 border text-center">Fournisseur</th>
                        <th class="px-4 py-2 border text-center">Prix par jour</th>
                        <th class="px-4 py-2 border text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% if vehicles is empty %}
                        <tr>
                            <td colspan="7" class="px-4 py-2 text-center">Aucun véhicule à afficher</td>
                        </tr>
                    {% else %}
                        {% for vehicle in vehicles %}
                            <tr class="hover:bg-gray-100">
                                <td class="px-4 py-2 border text-center">{{ vehicle.marque }}</td>
                                <td class="px-4 py-2 border text-center">{{ vehicle.model }}</td>
                                <td class="px-4 py-2 border text-center">{{ vehicle.lastMaintenance|date('d/m/Y') }}</td>
                                <td class="px-4 py-2 border text-center">{{ vehicle.nbKilometrage }} Km</td>
                                <td class="px-4 py-2 border text-center">{{ vehicle.nbSerie }}</td>
                                <td class="px-4 py-2 border text-center">
                                    {% if vehicle.agency %}
                                        {{ vehicle.agency.label }}
                                    {% else %}
                                        Non assignée
                                    {% endif %}
                                </td>
                                <td class="px-4 py-2 border text-center">{{ vehicle.getSupplier.getLabel }}</td>
                                <td class="px-4 py-2 border text-center">{{ vehicle.pricePerDay }} €</td>
                                <td class="px-4 py-2 border text-center">
                                    <div class="flex justify-center gap-2">
                                        <a href="{{ path('vehicle_show', { id: vehicle.id }) }}" class="px-2 py-1 border-2 border-blue-600 rounded font-medium text-blue-600 hover:bg-blue-600 hover:text-white">
                                            Voir
                                        </a>
                                        <a href="{{ path('vehicle_edit', { id: vehicle.id }) }}" class="px-2 py-1 border-2 border-yellow-600 rounded font-medium text-yellow-600 hover:bg-yellow-600 hover:text-white">
                                            Modifier
                                        </a>
                                        <form action="{{ path('vehicle_delete', { id: vehicle.id }) }}" method="POST">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <button type="submit" class="px-2 py-1 border-2 border-red-600 rounded font-medium text-red-600 hover:bg-red-600 hover:text-white">
                                                Supprimer
                                            </button>
                                        </form>
                                    </div>

                               </td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</section>
{% endblock %}
