{% extends 'index.html.twig' %}

{% block title %}Modifier une agence{% endblock %}

{% block main %}
<section class="max-w-8xl m-auto px-3 py-12">
    <div class="mb-10 text-center">
        <h1 class="text-4xl font-bold text-gray-800">Modifier l'agence : {{ agency.label }}</h1>
        <p class="text-lg text-gray-600 mt-3">Mettez Ã  jour les informations de l'agence.</p>
    </div>

    <div class="bg-white shadow-md rounded-lg p-6">


        <form action="{{ path('agency_update', {id: agency.id}) }}" method="POST">
            <input type="hidden" name="_method" value="PUT">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
                <div>
                    <label for="label" class="block text-sm font-medium text-gray-700">Nom de l'agence</label>
                    <input type="text" name="label" id="label" value="{{ agency.label }}" placeholder="Nom de l'agence"
                           class="w-full px-4 py-2 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
                </div>
                <div>
                    <label for="user_id" class="block text-sm font-medium text-gray-700">Chef d'agence</label>
                    <select name="user_id" id="user_id"
                            class="w-full px-4 py-2 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
                        {% for user in users %}
                            <option value="{{ user.id }}" {% if agency.user and agency.user.id == user.id %}selected{% endif %}>
                                {{ user.name }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div>
                    <label for="address" class="block text-sm font-medium text-gray-700">Adresse</label>
                    <input type="text" name="address" id="address" value="{{ agency.address }}" placeholder="Adresse"
                           class="w-full px-4 py-2 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
                </div>
                <div>
                    <label for="city" class="block text-sm font-medium text-gray-700">Ville</label>
                    <input type="text" name="city" id="city" value="{{ agency.city }}" placeholder="Ville"
                           class="w-full px-4 py-2 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
                </div>
                <div>
                    <label for="zip_code" class="block text-sm font-medium text-gray-700">Code postal</label>
                    <input type="number" name="zip_code" id="zip_code" value="{{ agency.zipCode }}" placeholder="Code postal"
                           class="w-full px-4 py-2 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
                </div>
            </div>

            <div class="flex justify-end">
                <a href="{{ path('agency_index') }}" class="px-4 py-2 bg-red-500 text-white rounded-md shadow-md hover:bg-red-600 mr-4">
                    Annuler
                </a>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md shadow-md hover:bg-blue-700">
                    Valider
                </button>
            </div>
        </form>
    </div>
</section>
{% endblock %}
