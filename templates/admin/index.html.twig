{% extends 'index.html.twig' %}

{% block title %}Espace Administrateur{% endblock %}

{% block main %}
<section class="max-w-8xl m-auto px-3 py-12">
    <div class="mb-10 text-center">
        <h1 class="text-4xl font-bold text-gray-800">Espace Administrateur</h1>
        <p class="text-lg text-gray-600 mt-3">Gérez les différents aspects de votre organisation.</p>
    </div>

    <div class="flex flex-wrap justify-center gap-6">
        <div class="bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-200 w-full sm:w-1/2 lg:w-1/3 max-w-xs">
            <div class="p-6">
                <h3 class="text-xl font-semibold text-gray-800">Utilisateurs</h3>
                <p class="text-gray-600 mt-3">
                    Gérer et administrer les comptes utilisateurs de la plateforme.
                </p>
            </div>
            <div class="p-4 bg-gray-50 text-center">
                <a href="{{ path('admin_user_index') }}" class="px-4 py-2 bg-blue-600 text-white rounded-md shadow-md hover:bg-blue-700">
                    Gérer les utilisateurs
                </a>
            </div>
        </div>

        <div class="bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-200 w-full sm:w-1/2 lg:w-1/3 max-w-xs">
            <div class="p-6">
                <h3 class="text-xl font-semibold text-gray-800">Véhicules</h3>
                <p class="text-gray-600 mt-3">
                    Gérer le catalogue de véhicules disponibles.
                </p>
            </div>
            <div class="p-4 bg-gray-50 text-center">
                <a href="{{ path('vehicle_index') }}" class="px-4 py-2 bg-blue-600 text-white rounded-md shadow-md hover:bg-blue-700">
                    Gérer les véhicules
                </a>
            </div>
        </div>

        <div class="bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-200 w-full sm:w-1/2 lg:w-1/3 max-w-xs">
            <div class="p-6">
                <h3 class="text-xl font-semibold text-gray-800">Fournisseurs</h3>
                <p class="text-gray-600 mt-3">
                    Gérer les relations avec les fournisseurs de la plateforme.
                </p>
            </div>
            <div class="p-4 bg-gray-50 text-center">
                <a href="{{ path('admin_supplier_index') }}" class="px-4 py-2 bg-blue-600 text-white rounded-md shadow-md hover:bg-blue-700">
                    Gérer les fournisseurs
                </a>
            </div>
        </div>
        <div class="bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-200 w-full sm:w-1/2 lg:w-1/3 max-w-xs">
            <div class="p-6">
                <h3 class="text-xl font-semibold text-gray-800">Agences</h3>
                <p class="text-gray-600 mt-3">
                    Gérer les agences de votre organisation.
                </p>
            </div>
            <div class="p-4 bg-gray-50 text-center">
                <a href="{{ path('agency_index') }}" class="px-4 py-2 bg-blue-600 text-white rounded-md shadow-md hover:bg-blue-700">
                    Gérer les agences
                </a>
            </div>
        </div>

        <div class="bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-200 w-full sm:w-1/2 lg:w-1/3 max-w-xs">
            <div class="p-6">
                <h3 class="text-xl font-semibold text-gray-800">Commandes</h3>
                <p class="text-gray-600 mt-3">
                    Gérer les commandes effectuées sur la plateforme.
                </p>
            </div>
            <div class="p-4 bg-gray-50 text-center">
                <a href="{{ path('app_location_index') }}" class="px-4 py-2 bg-blue-600 text-white rounded-md shadow-md hover:bg-blue-700">
                    Gérer les commandes
                </a>
            </div>
        </div>
    </div>
</section>
{% endblock %}
