{% extends 'index.html.twig' %}

{% block title %}Modifier un fournisseur{% endblock %}

{% block main %}
<section class="max-w-8xl m-auto px-3 py-12">
    <div class="mb-10 text-center">
        <h1 class="text-4xl font-bold text-gray-800">Modifier le fournisseur : {{ supplier.label }}</h1>
        <p class="text-lg text-gray-600 mt-3">Mettez Ã  jour les informations du fournisseur.</p>
    </div>

    <div class="bg-white shadow-md rounded-lg p-6">


        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <div>
                {{ form_label(form.label, 'Nom du fournisseur', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.label, {'attr': {'class': 'w-full px-4 py-2 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.label) }}
            </div>
        </div>
        <div class="flex justify-end mt-6">
            <a href="{{ path('admin_supplier_index') }}" class="px-4 py-2 bg-red-500 text-white rounded-md shadow-md hover:bg-red-600 mr-4">
                Annuler
            </a>
            <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md shadow-md hover:bg-blue-700">
                Valider
            </button>
        </div>
        {{ form_end(form) }}
    </div>
</section>
{% endblock %}
