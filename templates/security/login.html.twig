{% extends 'index.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block main %}
    <section class="max-w-8xl m-auto px-3 h-[calc(100vh-69px)] relative">
        <h1 class="font-semibold text-3xl">Connexion</h1>

        <form method="post" class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 flex flex-col items-center gap-4 min-w-96">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            
            <div class="flex flex-col gap-2 w-full">
                <label for="username">Email:</label>
                <input type="email" value="{{ last_username }}" class=" border-2 rounded p-1 w-full focus:outline-red-600" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
            </div>
            
            <div class="flex flex-col gap-2 w-full">
                <label for="password">Password:</label>
                <input type="password" class="border-2 rounded p-1 w-full focus:outline-red-600" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            </div>
            

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            <button class="inline-block bg-red-600 px-4 py-2 rounded text-white font-medium grow-0" type="submit">Me connecter</button>
        </form>
    </section>
    
{% endblock %}
