{% extends 'index.html.twig' %}

{% block title %}Détails de la location{% endblock %}

{% block main %}
<section class="py-12">
    <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800">Détails de la location</h2>
            <div class="flex gap-4">
                <a href="{{ path('app_location_edit', { id: location.id }) }}"
                   class="px-2 py-1 border-2 border-yellow-600 rounded font-medium text-yellow-600 hover:bg-yellow-600 hover:text-white">
                    Modifier
                </a>
                {{ include('location/_delete_form.html.twig') }}
            </div>
        </div>

        <div class="bg-white overflow-hidden shadow-sm sm:rounded-lg">
            <table class="w-full table-auto border-collapse">
                <tbody>
                    <tr class="hover:bg-gray-50">
                        <th class="px-4 py-2 border text-left font-medium bg-gray-100 w-1/3">ID</th>
                        <td class="px-4 py-2 border">{{ location.id }}</td>
                    </tr>
                    <tr class="hover:bg-gray-50">
                        <th class="px-4 py-2 border text-left font-medium bg-gray-100">Date de début</th>
                        <td class="px-4 py-2 border">{{ location.startDate ? location.startDate|date('d/m/Y H:i') : 'Non défini' }}</td>
                    </tr>
                    <tr class="hover:bg-gray-50">
                        <th class="px-4 py-2 border text-left font-medium bg-gray-100">Date de fin</th>
                        <td class="px-4 py-2 border">{{ location.endDate ? location.endDate|date('d/m/Y H:i') : 'Non défini' }}</td>
                    </tr>
                    <tr class="hover:bg-gray-50">
                        <th class="px-4 py-2 border text-left font-medium bg-gray-100">Créé le</th>
                        <td class="px-4 py-2 border">{{ location.createdAt ? location.createdAt|date('d/m/Y H:i') : 'Non défini' }}</td>
                    </tr>
                    <tr class="hover:bg-gray-50">
                        <th class="px-4 py-2 border text-left font-medium bg-gray-100">Mis à jour le</th>
                        <td class="px-4 py-2 border">{{ location.updatedAt ? location.updatedAt|date('d/m/Y H:i') : 'Non défini' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-6">
            <a href="{{ path('app_location_index') }}"
               class="px-3 py-2 border-2 border-blue-600 text-blue-600 font-medium rounded hover:bg-blue-600 hover:text-white">
                Retour à la liste
            </a>
        </div>
    </div>
</section>
{% endblock %}
