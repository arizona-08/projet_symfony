{% extends 'index.html.twig' %}

{% block title %}Créer une location{% endblock %}

{% block main %}
<section class="py-12">
    <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
        <div class="mb-6">
            <h2 class="text-2xl font-bold text-gray-800">Créer une location</h2>
        </div>

        <div class="bg-white overflow-hidden shadow-md sm:rounded-lg">
            <div class="p-6">
                <form action="{{ path('app_location_new') }}" method="POST">
                    <div class="overflow-x-auto">
                        <table class="w-full table-auto border-collapse">
                            <thead>
                                <tr class="bg-gray-200">
                                    <th class="px-4 py-2 border text-left">Locataire</th>
                                    <th class="px-4 py-2 border text-left">Date de début</th>
                                    <th class="px-4 py-2 border text-left">Date de fin</th>
                                    <th class="px-4 py-2 border text-left">Véhicule</th>
                                    <th class="px-4 py-2 border text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="border px-4 py-2">
                                        <select name="user_id" id="user_id" class="w-full px-2 py-1 border rounded focus:ring-blue-500 focus:border-blue-500">
                                            {# {% for user in users %}
                                                <option value="{{ user.id }}">{{ user.name }}</option>
                                            {% endfor %} #}
                                        </select>
                                    </td>

                                    <td class="border px-4 py-2">
                                        <input type="date" name="start_date" id="start_date"
                                               class="w-full px-2 py-1 border rounded focus:ring-blue-500 focus:border-blue-500">
                                    </td>

                                    <td class="border px-4 py-2">
                                        <input type="date" name="end_date" id="end_date"
                                               class="w-full px-2 py-1 border rounded focus:ring-blue-500 focus:border-blue-500">
                                    </td>

                                    <td class="border px-4 py-2">
                                        <select name="vehicle_id" id="vehicle_id" class="w-full px-2 py-1 border rounded focus:ring-blue-500 focus:border-blue-500">
                                            {# {% for vehicle in vehicles %}
                                                <option value="{{ vehicle.id }}">{{ vehicle.marque }} {{ vehicle.model }}</option>
                                            {% endfor %} #}
                                        </select>
                                    </td>

                                    <td class="border px-4 py-2 text-center">
                                        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                                            Enregistrer
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
{% endblock %}
