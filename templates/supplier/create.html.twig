{% extends "index.html.twig" %}

{% block title %}Ajouter un fournisseur{% endblock %}

{% block main %}
<section class="max-w-8xl m-auto px-3 py-12">
    <div class="mb-10 text-center">
        <h1 class="text-4xl font-bold text-gray-800">Ajouter un fournisseur</h1>
        <p class="text-lg text-gray-600 mt-3">Remplissez les informations ci-dessous pour ajouter un nouveau fournisseur.</p>
    </div>

    {% for message in app.flashes('success') %}
    <div class="bg-green-50 border border-green-300 text-green-700 px-4 py-3 rounded relative mb-6">
        {{ message }}
    </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="bg-red-50 border border-red-300 text-red-700 px-4 py-3 rounded relative mb-6">
            {{ message }}
        </div>
    {% endfor %}


    <div class="bg-white shadow-md rounded-lg p-6">
        {{ form_start(form) }}
            <div class="space-y-4">
                {{ form_row(form.label, {
                    'label': 'Nom du fournisseur :',
                    'attr': {
                        'placeholder': 'Entrez le nom du fournisseur',
                        'class': 'w-full px-4 py-2 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500'
                    }
                }) }}
            </div>
            <button type="submit" class="mt-4 px-4 py-2 bg-blue-600 text-white rounded-md shadow-md hover:bg-blue-700">
                Ajouter
            </button>
        {{ form_end(form) }}
    </div>
</section>
{% endblock %}
