{% extends 'index.html.twig' %}

{% block title %}Liste des fournisseurs{% endblock %}

{% block main %}
<section class="py-12">
    <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800">Liste des fournisseurs</h2>
            <a href="{{ path('supplier_create') }}" class="px-2 py-1 border-2 border-red-600 rounded font-medium hover:bg-red-600 hover:text-white">
                Ajouter un fournisseur
            </a>
        </div>

        <div class="mt-6 bg-white overflow-hidden shadow-sm sm:rounded-lg">
            <table class="w-full border-collapse">
                <thead class="bg-gray-200">
                    <tr>
                        <th class="px-4 py-2 border text-center">Nom du fournisseur</th>
                        <th class="px-4 py-2 border text-center">Date d'ajout</th>
                        <th class="px-4 py-2 border text-center">Véhicules</th>
                        <th class="px-4 py-2 border text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% if suppliers is not empty %}
                        {% for supplier in suppliers %}
                            <tr class="hover:bg-gray-100">
                                <td class="px-4 py-2 border text-center">
                                    <a href="{{ path('supplier_show', {id: supplier.id}) }}" class="hover:text-blue-500 hover:underline">
                                        {{ supplier.label }}
                                    </a>
                                </td>
                                <td class="px-4 py-2 border text-center">
                                    {{ supplier.getCreatedAt|date('d/m/Y') }}
                                </td>
                                <td class="px-4 py-2 border text-center">
                                    <a href="{{ path('supplier_showvehicle', {id: supplier.id}) }}" class="px-2 py-1 border-2 border-blue-500 rounded font-medium text-blue-500 hover:bg-blue-500 hover:text-white">
                                        Voir les véhicules
                                    </a>
                                </td>
                                <td class="px-4 py-2 border text-center">
                                    <div class="flex justify-center gap-2">
                                        <a href="{{ path('supplier_show', {id: supplier.id}) }}" class="px-2 py-1 border-2 border-blue-600 rounded font-medium text-blue-600 hover:bg-blue-600 hover:text-white">
                                            Voir
                                        </a>
                                        <a href="{{ path('supplier_edit', {id: supplier.id}) }}" class="px-2 py-1 border-2 border-yellow-600 rounded font-medium text-yellow-600 hover:bg-yellow-600 hover:text-white">
                                            Modifier
                                        </a>
                                        {% include 'supplier/_delete_form.html.twig' with {'supplier': supplier} %}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="4" class="px-4 py-2 text-center">Aucun fournisseur trouvé</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</section>
{% endblock %}
