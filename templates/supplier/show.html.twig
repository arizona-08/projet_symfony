{% extends "index.html.twig" %}

{% block title %}Fournisseur{% endblock %}

{% block main %}
    <section class="max-w-8xl m-auto px-3 py-12">
        <div class="w-full flex justify-between items-center">
            <h1 class="text-3xl font-semibold mb-4">Fournisseur: {{supplier.getLabel}}</h1>
            <div class="flex items-center gap-4">
                <a href="{{ path('supplier_edit', {id: supplier.id}) }}" class="px-4 py-2 border-2 border-red-500 rounded font-medium">Modifier</a>
                {% include "supplier/_delete_form.html.twig" %}
            </div>
        </div>
        

        <h2 class="text-xl font-semibold mb-4">Véhicules:</h2>

        <div class="w-full overflow-hidden rounded">
            <table class="min-w-96 border-collapse rounded">
                <thead class="bg-slate-200">
                    <tr>
                        <th class="px-4 py-2 border text-center font-medium">Marque</th>
                        <th class="px-4 py-2 border text-center font-medium">Model</th>
                        <th class="px-4 py-2 border text-center font-medium">Numéro de série</th>
                        <th class="px-4 py-2 border text-center font-medium">Dernière maintenance</th>
                        <th class="px-4 py-2 border text-center font-medium">Agence</th>
                    </tr>
                </thead>
                <tbody>
                    {% for vehicle in supplier.getVehicles %}
                        <tr>
                            <td class="px-4 py-2 border text-center">{{vehicle.marque}}</td>
                            <td class="px-4 py-2 border text-center">{{vehicle.model}}</td>
                            <td class="px-4 py-2 border text-center">{{vehicle.nbSerie}}</td>
                            <td class="px-4 py-2 border text-center">{{vehicle.lastMaintenance|date('d/m/Y')}}</td>
                            <td class="px-4 py-2 border text-center"><a href="{{ path('agency_show', {id: vehicle.agency.id}) }}" class="hover:text-blue-500 hover:underline">{{vehicle.agency.label}}</a></td>
                        </tr>
                    {% endfor %}
                    
                </tbody>
            </table>
        </div>
        
    </section>
{% endblock %}