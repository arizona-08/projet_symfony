{% extends 'index.html.twig' %}

{% block title %}Détails de l'utilisateur{% endblock %}

{% block main %}
<section class="py-12">
    <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
        <!-- Header Section -->
        <div class="mb-6">
            <h2 class="text-2xl font-bold text-gray-800">Détails de l'utilisateur : {{ user.name }}</h2>
        </div>

        <!-- User Details -->
        <div class="bg-white p-6 shadow-md rounded-lg">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 mb-6">
                <!-- Nom -->
                <div>
                    <label class="block text-sm font-medium text-gray-700">Nom :</label>
                    <p class="mt-1 text-gray-800">{{ user.name }}</p>
                </div>

                <!-- Email -->
                <div>
                    <label class="block text-sm font-medium text-gray-700">Email :</label>
                    <p class="mt-1 text-gray-800">{{ user.email }}</p>
                </div>

                <!-- Rôle -->
                <div>
                    <label class="block text-sm font-medium text-gray-700">Rôle :</label>
                    <p class="mt-1 text-gray-800">
                        {% if user.roles is not empty %}
                            {{ user.roles[0] }}
                        {% else %}
                            Aucun rôle attribué
                        {% endif %}
                    </p>
                </div>

                <!-- Date de création -->
                <div>
                    <label class="block text-sm font-medium text-gray-700">Date de création :</label>
                    <p class="mt-1 text-gray-800">{{ user.createdAt|date('d/m/Y') }}</p>
                </div>

                <!-- Date de vérification de l'email -->
                <div>
                    <label class="block text-sm font-medium text-gray-700">Email vérifié le :</label>
                    <p class="mt-1 text-gray-800">
                        {% if user.emailVerifiedAt %}
                            {{ user.emailVerifiedAt|date('d/m/Y') }}
                        {% else %}
                            Non vérifié
                        {% endif %}
                    </p>
                </div>
            </div>

            <!-- Actions -->
            <div class="flex justify-end space-x-4">
                <a href="{{ path('user_index') }}" class="px-2 py-1 border-2 border-red-600 rounded font-medium hover:bg-red-600 hover:text-white">
                    Retour
                </a>
                <a href="{{ path('user_edit', { id: user.id }) }}" class="px-2 py-1 border-2 border-blue-600 rounded font-medium text-blue-600 hover:bg-blue-600 hover:text-white">
                    Modifier
                </a>
                <form action="{{ path('user_delete', { id: user.id }) }}" method="POST" class="inline">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="px-2 py-1 border-2 border-red-600 rounded font-medium text-red-600 hover:bg-red-600 hover:text-white">
                        Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>
{% endblock %}
