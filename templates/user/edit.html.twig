{% extends 'index.html.twig' %}

{% block title %}Modifier un utilisateur{% endblock %}

{% block main %}
<section class="max-w-4xl m-auto px-4 py-12">
    <div class="mb-10 text-center">
        <h1 class="text-4xl font-bold text-gray-800">Modifier un utilisateur</h1>
        <p class="text-lg text-gray-600 mt-3">Mettez à jour les informations de {{ user.name }}.</p>
    </div>

    <div class="bg-white shadow-md rounded-lg p-6">
        <form action="{{ path('user_update', { id: user.id }) }}" method="POST">
            <input type="hidden" name="_method" value="PUT">

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-6">
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700">Nom</label>
                    <input type="text" name="name" id="name" value="{{ user.name }}" placeholder="Nom complet"
                        class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                </div>

                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                    <input type="email" name="email" id="email" value="{{ user.email }}" placeholder="Adresse email"
                        class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                </div>

                <div>
                    <label for="role" class="block text-sm font-medium text-gray-700">Rôle</label>
                    <select name="role" id="role" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                        {% for roleName, roleValue in roles %}
                            <option value="{{ roleValue }}" {% if roleValue in user.roles %}selected{% endif %}>
                                {{ roleName }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <div>
                    <label for="password" class="block text-sm font-medium text-gray-700">Mot de passe</label>
                    <input type="password" name="password" id="password" placeholder="Nouveau mot de passe"
                        class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                </div>

                <div>
                    <label for="password_confirmation" class="block text-sm font-medium text-gray-700">Confirmer le mot de passe</label>
                    <input type="password" name="password_confirmation" id="password_confirmation" placeholder="Confirmez le mot de passe"
                        class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                </div>
            </div>

            <div class="flex justify-end gap-4">
                <a href="{{ path('user_index') }}" class="px-4 py-2 text-red-600 border border-red-600 rounded-md font-medium hover:bg-red-600 hover:text-white transition-colors">
                    Annuler
                </a>
                <button type="submit" class="px-4 py-2 text-blue-600 border border-blue-600 rounded-md font-medium hover:bg-blue-600 hover:text-white transition-colors">
                    Valider
                </button>
            </div>
        </form>
    </div>
</section>
{% endblock %}
